include $(MAKE_ENV)/common_target.opt


#=============================================================================
# Following are dependancies of the inherited classes used by project
#

#------------  Object files dependancies for BaseDevice class  ------------
BASEDEVICE_INCLUDES = \
		$(BASEDEVICE_HOME)/BaseDevice.h \
		$(BASEDEVICE_HOME)/BaseDeviceClass.h
$(OBJDIR)/BaseDevice.o:  $(BASEDEVICE_HOME)/BaseDevice.cpp $(BASEDEVICE_INCLUDES)
	$(CXX) $(CXXFLAGS) -c $< -o $(OBJDIR)/BaseDevice.o
$(OBJDIR)/BaseDeviceClass.o:  $(BASEDEVICE_HOME)/BaseDeviceClass.cpp $(BASEDEVICE_INCLUDES)
	$(CXX) $(CXXFLAGS) -c $< -o $(OBJDIR)/BaseDeviceClass.o
$(OBJDIR)/BaseDeviceStateMachine.o:  $(BASEDEVICE_HOME)/BaseDeviceStateMachine.cpp $(BASEDEVICE_INCLUDES)
	$(CXX) $(CXXFLAGS) -c $< -o $(OBJDIR)/BaseDeviceStateMachine.o

SVC_INHERITANCE_INCL =  $(BASEDEVICE_INCLUDES)

$(OBJDIR)/TaskCallBack.o:  TaskCallBack.cpp $(SVC_INCL)
	$(CXX) $(CXXFLAGS) -c $< -o $(OBJDIR)/TaskCallBack.o
$(OBJDIR)/SchedulerThread.o:  SchedulerThread.cpp $(SVC_INCL)
	$(CXX) $(CXXFLAGS) -c $< -o $(OBJDIR)/SchedulerThread.o
$(OBJDIR)/TaskManager.o:  TaskManager.cpp $(SVC_INCL)
	$(CXX) $(CXXFLAGS) -c $< -o $(OBJDIR)/TaskManager.o

